{% extends "base.html.twig" %}

{% block title %}Modification de l'annonce : {{ ad.title }}{% endblock %}

{% form_theme form "ad/_collection.html.twig" %}

{% block body %}
    <div class="container">
        <h1>Modification de l'annonce : <strong>{{ ad.title }}</strong></h1>

        {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary mt-3">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/annonce.js"></script>
{% endblock %}


